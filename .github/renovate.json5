{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":semanticCommits"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "semanticCommitType": "ci"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "semanticCommitScope": "deps-dev"
        },
        {
            "matchPackagePatterns": [
                "*"
            ],
            "rangeStrategy": "bump"
        },
        {
            "matchPackageNames": [
                "@mdx-js/react"
            ],
            "allowedVersions": "<2"
        }
    ]
}